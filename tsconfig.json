{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "paths": {
      "app/*": ["./packages/app/*"],
      "@react-native-templates/demo-ui/*": ["./packages/ui/*"],
      "@react-native-templates/core": ["./packages/core/src"],
      "@react-native-templates/ws-client": ["./packages/ws-client/src"]
    },
    "composite": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react"
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "apps/next/out",
    "apps/next/.next",
    "apps/next/.tamagui"
  ]
}
